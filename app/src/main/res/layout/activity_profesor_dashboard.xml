<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profesor_drawer_layout"
    tools:context=".ProfesorDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/profesor_main_toolbar"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="20dp"
            android:onClick="ClickUsers">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_users"
                android:layout_gravity="center">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="50dp">

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="20dp"
            android:onClick="ClickAsesorias">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_asesorias"
                android:layout_gravity="center">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asesorias"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="50dp">

            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="20dp"
            android:onClick="ClickMaterias">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_materia"
                android:layout_gravity="center">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materias"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="50dp">

            </TextView>

        </androidx.cardview.widget.CardView>
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include
            layout="@layout/profesor_main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>